pipeline {
    agent any

    environment {
        AWS_REGION = credentials("AWS_REGION")
        AWS_ID = credentials("AWS_ID")
        COMMIT_HASH = "latest"
    }

    stages {
        stage("Test") {
            steps {
                dir('Kubernetes/BlueGreen'){
                    sh "export DEPLOYMENT_COLOR='green'"
                    sh "envsubst < aline-bank.yaml | kubectl apply -f -"
                }
            }
        }
    }
}